<h1>PLEDGE FORM</h1>

<% if @student.errors.any? %>
  <h2>Errors:</h2>
    <% @student.errors.full_messages.each do |error| %>
    <%= error %><br>
  <% end %>
<% end %>

<%= form_for @student do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :grade %>
  <%= f.text_field :grade %>
  <%= f.label :frat_name %>
  <%= f.text_field :frat_name %>

  <!-- <%= f.label :frat %>
  <%= f.collection_select :frat_id, Frat.all, :id, :name %> -->

  <%= f.submit "Join Frat" %>
<% end %>

